<%- include("partials/header"); -%>
<h1>COMPOSE</h1>

<form action="/compose" method="POST">
  <div class="form-group">
    <label for="compose">Title</label><br />
    <input
      type="text"
      name="compose"
      placeholder="compose"
      class="form-control"
      autofocus
    />
  </div>
  <div class="form-group">
    <label for="textarea">Post</label><br />
    <textarea
      name="textarea"
      rows="5"
      cols="30"
      id="textarea"
      placeholder="Enter your message here..."
      class="form-control"
    ></textarea>
  </div>
  <button type="submit" name="publish" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer"); -%>
